---
import Layout from '../layouts/Layout.astro';
import { getSiteSettings } from '../lib/site-settings';

const siteSettings = getSiteSettings();
---

<Layout title="Page Not Found" description="The page you're looking for doesn't exist.">
	<section class="max-w-4xl mx-auto px-6 py-32 text-center">
		<div class="mb-8">
			<span class="text-8xl font-serif font-bold text-accent">404</span>
		</div>
		
		<h1 class="text-4xl font-serif font-bold text-primary mb-4">
			Page Not Found
		</h1>
		
		<p class="text-xl text-primary/70 mb-8 max-w-md mx-auto">
			Sorry, the page you're looking for doesn't exist or has been moved.
		</p>
		
		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<a 
				href="/"
				class="inline-flex items-center justify-center px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-primary transition-colors"
			>
				‚Üê Back to Home
			</a>
			<a 
				href="/blog"
				class="inline-flex items-center justify-center px-6 py-3 border border-muted text-primary font-medium rounded-lg hover:border-accent hover:text-accent transition-colors"
			>
				Browse Blog
			</a>
		</div>
		
		<div class="mt-16 pt-8 border-t border-muted">
			<p class="text-sm text-primary/50">
				Looking for something specific? Try searching from the navigation menu.
			</p>
		</div>
	</section>
</Layout>

