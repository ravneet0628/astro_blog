---
import Layout from '../layouts/BlogPost.astro';
import { getSiteSettings } from '../lib/site-settings';
import { getCollection } from 'astro:content';
import { getImageSrc } from '../lib/image';

const siteSettings = getSiteSettings();

// Get About page from pages collection
const pages = await getCollection('pages');
const aboutPage = pages.find(page => page.slug === 'about');

if (!aboutPage) {
	return Astro.redirect('/404');
}

const { Content } = await aboutPage.render();
const pageTitle = aboutPage.data.title;
const metaTitle = aboutPage.data.metaTitle || pageTitle;
const metaDescription = aboutPage.data.metaDescription || siteSettings.siteDescription;
const heroImage = aboutPage.data.heroImage ? getImageSrc(aboutPage.data.heroImage) : undefined;
const heroImageAlt = aboutPage.data.heroImage?.alt || pageTitle;
---

<Layout
	title={pageTitle}
	seoTitle={metaTitle}
	description={siteSettings.siteDescription}
	seoDescription={metaDescription}
	pubDate={new Date()}
	heroImage={heroImage}
>
	<div class="prose prose-lg max-w-none">
		<Content />

		<div class="bg-muted rounded-2xl p-8 mt-8">
			<h3 class="text-xl font-serif font-semibold text-primary mb-4">Let's Connect</h3>
			<p class="text-primary/70 mb-6">
				Join our community of thoughtful readers who believe in living with intention and finding beauty in the everyday.
			</p>
			<div class="flex flex-col sm:flex-row gap-4">
				{siteSettings.socialLinks?.email && (
					<a 
						href={`mailto:${siteSettings.socialLinks.email}`}
						class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-accent transition-colors font-medium"
					>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					Email Me
				</a>
				)}
				{siteSettings.socialLinks?.instagram && (
					<a 
						href={siteSettings.socialLinks.instagram}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white rounded-lg hover:bg-primary transition-colors font-medium"
					>
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.40z"/>
						</svg>
						Instagram
					</a>
				)}
			</div>
		</div>
	</div>
</Layout>
