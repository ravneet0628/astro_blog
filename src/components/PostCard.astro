---
import type { PostData } from '../lib/content';
import FormattedDate from './FormattedDate.astro';
import ReadingTime from './ReadingTime.astro';
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  post: PostData;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
---

<article class={`group bg-muted rounded-xl p-4 interactive-card focus-within:ring-2 focus-within:ring-accent/40 ${featured ? 'space-y-6' : 'space-y-4'}`}>
  <div class="space-y-4">
    <a 
      href={`/blog/${post.slug}`} 
             class={`relative block overflow-hidden rounded-xl focus:outline-none focus:ring-2 focus:ring-accent transition-transform duration-500 motion-safe:group-hover:scale-[1.02] motion-safe:group-focus-within:scale-[1.01] ${
        featured ? 'aspect-[16/10]' : 'aspect-[4/3]'
      }`}
      aria-label={`Read ${post.title}`}
    >
      <OptimizedImage 
        src={post.cover}
        alt={post.cover?.alt || post.title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading={featured ? "eager" : "lazy"}
      />
    </a>
    
    <div class="space-y-3">
      <!-- Meta -->
      <div class="flex flex-wrap items-center gap-2 text-sm text-primary/70">
        <FormattedDate date={post.publishedAt} />
        {post.tags && post.tags.length > 0 && (
          <>
            {post.tags.slice(0, 3).map((tag) => (
              <a 
                href={`/tags/${encodeURIComponent(tag)}`}
               class="bg-surface/60 text-primary px-2 py-1 rounded-full text-xs font-medium hover:bg-accent hover:text-white transition-colors"
              >
                #{tag}
              </a>
            ))}
            {post.tags.length > 3 && (
              <span class="text-xs text-primary/50">
                +{post.tags.length - 3}
              </span>
            )}
          </>
        )}
        {post.body && (
          <ReadingTime 
            content={post.body} 
            showIcon={false}
            className="text-xs"
          />
        )}
      </div>
      
      <!-- Title -->
      <a 
        href={`/blog/${post.slug}`} 
        class="group/title inline-block focus:outline-none focus:ring-2 focus:ring-accent rounded"
      >
        <h3 class={`font-serif font-semibold text-primary group-hover/title:text-accent transition-colors duration-300 leading-tight ${
          featured ? 'text-3xl lg:text-4xl' : 'text-xl lg:text-2xl'
        }`}>
          {post.title}
        </h3>
      </a>
      
      <!-- Excerpt -->
      {post.excerpt && (
        <p class="text-primary/70 leading-relaxed line-clamp-3">
          {post.excerpt}
        </p>
      )}
    </div>
  </div>
</article>
