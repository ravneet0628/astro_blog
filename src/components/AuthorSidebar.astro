---
import { getSiteSettings } from '../lib/site-settings';
import { getImageUrl } from '../config/environment';

// Get site settings from CMS
const siteSettings = await getSiteSettings();

// Author data from CMS with fallbacks
const author = {
  name: siteSettings.author || 'Blog Author',
  bio: siteSettings.authorBio || 'Welcome to my corner of the internet.',
  avatar: siteSettings.authorImage?.url ? getImageUrl(siteSettings.authorImage) : undefined,
  social: {
    instagram: siteSettings.socialLinks?.instagram || '',
    twitter: siteSettings.socialLinks?.twitter || '',
    email: siteSettings.socialLinks?.email || '',
    website: siteSettings.socialLinks?.website || ''
  }
};
---

<div class="space-y-6 align-center">
  <!-- Author Profile Card -->
  <div class="bg-muted rounded-xl p-6">
    <!-- Author Avatar & Name -->
    <div class="flex-col items-center justify-center space-x-4 mb-4">
      <div class="w-36 h-36 mx-auto rounded-full overflow-hidden">
        {author.avatar ? (
          <img 
            src={author.avatar} 
            alt={author.name}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        ) : (
          <!-- Fallback avatar -->
          <div class="w-full h-full bg-muted-dark flex items-center justify-center">
            <svg class="w-8 h-8 text-primary/40" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
        )}
      </div>
      
      <div class="flex-1 text-center">
        <h3 class="font-serif text-xl font-semibold text-primary mb-1">
          {author.name}
        </h3>
        <p class="text-sm text-primary/60">Author & Creator</p>
      </div>
    </div>

    {author.bio && (
      <div class="text-center mb-4">
        <p class="text-sm text-primary/80 leading-relaxed">
          {author.bio}
        </p>
      </div>
    )}

    <!-- Social Media Links -->
    <div class="mt-4 flex justify-center space-x-4">
      {author.social.instagram && (
        <a 
          href={author.social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary/60 hover:text-accent transition-colors"
          aria-label="Follow on Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.40z"/>
          </svg>
        </a>
      )}
      
      {author.social.twitter && (
        <a 
          href={author.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary/60 hover:text-accent transition-colors"
          aria-label="Follow on Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
      )}

      {author.social.website && (
        <a 
          href={author.social.website}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary/60 hover:text-accent transition-colors"
          aria-label="Visit website"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0 9c-1.657 0-3-4.03-3-9s1.343-9 3-9m0 9c1.657 0 3 4.03 3 9s-1.343 9-3 9m-9 9a9 9 0 019-9"/>
          </svg>
        </a>
      )}
      
      {author.social.email && (
        <a 
          href={`mailto:${author.social.email}`}
          class="text-primary/60 hover:text-accent transition-colors"
          aria-label="Send email"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </a>
      )}
    </div>
  </div>

  <!-- Newsletter Section -->
  <div class="bg-muted rounded-xl p-6">
    <div class="mb-4 text-center">
      <h4 class="font-serif text-lg font-semibold text-primary mb-2">
        Subscribe to my newsletter
      </h4>
      <p class="text-sm text-primary/60">
        Get the latest posts and insights delivered directly to your inbox.
      </p>
    </div>
    
    <form class="flex flex-col gap-3">
      <input 
        type="email" 
        placeholder="Your email address"
        class="flex-1 px-4 py-3 rounded-lg border border-muted focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent text-sm"
        required
      />
      <button 
        type="submit"
        class="px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-primary transition-colors duration-200 text-sm"
      >
        Subscribe
      </button>
    </form>
  </div>
</div> 