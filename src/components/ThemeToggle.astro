---
interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<button
	type="button"
	class:list={['theme-toggle', className]}
	data-theme-toggle
	aria-pressed="false"
	aria-label="Toggle dark mode"
>
	<span class="sr-only">Toggle color theme</span>
	<span class="theme-toggle__icon theme-toggle__icon--sun" aria-hidden="true">
		<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="w-5 h-5">
			<circle cx="12" cy="12" r="4" stroke-width="1.6"></circle>
			<path stroke-linecap="round" stroke-width="1.6" d="M12 2v2m0 16v2m10-10h-2M4 12H2m16.95 7.05-1.4-1.4M6.45 6.45l-1.4-1.4m0 13.99 1.4-1.4m11.1-11.19 1.4-1.4"/>
		</svg>
	</span>
	<span class="theme-toggle__icon theme-toggle__icon--moon" aria-hidden="true">
		<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="w-5 h-5">
			<path
				stroke-width="1.6"
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M21 12.79A9 9 0 0 1 11.21 3 7 7 0 1 0 21 12.79Z"
			/>
		</svg>
	</span>
</button>


