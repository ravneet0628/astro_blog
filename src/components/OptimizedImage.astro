---
import { getImageSrc, DEFAULT_PLACEHOLDER } from '../lib/image';

export interface Props {
  src: { src: string; alt?: string } | string | null | undefined;
  alt: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  width?: number;
  height?: number;
  sizes?: string;
}

const { 
  src, 
  alt, 
  class: className = '', 
  loading = 'lazy',
  fetchpriority = 'auto',
  width, 
  height,
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw'
} = Astro.props;

// Get the image URL from various input formats
const getUrl = () => {
  if (!src) return null;
  if (typeof src === 'string') return src;
  if (src.src) return src.src;
  return null;
};

const imageUrl = getUrl();
const hasImage = imageUrl && imageUrl !== DEFAULT_PLACEHOLDER;
---

{hasImage ? (
  <img 
    src={imageUrl} 
    alt={alt}
    class={className}
    loading={loading}
    fetchpriority={loading === 'eager' ? 'high' : fetchpriority}
    decoding="async"
    width={width}
    height={height}
    sizes={sizes}
  />
) : (
  <div class={`bg-muted flex items-center justify-center ${className}`}>
    <svg class="w-12 h-12 text-primary/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
  </div>
)}
