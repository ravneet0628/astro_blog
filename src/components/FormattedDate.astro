---
interface Props {
	date: Date | string;
}

const { date } = Astro.props;

// Convert string dates to Date objects if needed
const dateObj = typeof date === 'string' ? new Date(date) : date;
---

<time datetime={dateObj.toISOString()}>
	{
		dateObj.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
